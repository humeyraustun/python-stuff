    "def countdown(n, sentence):\n",
    "    result = \"\"\n",
    "    for i in range (n, 0, -1):\n",
    "        result += str (i) + \"-\"\n",
    "    result += sentence.upper()+ \"!\" \n",
    "    return result\n",
    "countdown (3, \"ready\")"
   ]
  }
